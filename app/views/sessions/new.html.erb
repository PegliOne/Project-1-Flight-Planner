<h2>Login</h2>

<% if flash[:error].present? %>
  <p class="error">
    <%= flash[:error] %>
  </p>
<% end %>

<%= form_tag sessions_create_path do %>

    <%= label_tag :email %>
    <%= email_field_tag :email, nil, :autofocus => true %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= submit_tag "Log in" %>
<% end %>
