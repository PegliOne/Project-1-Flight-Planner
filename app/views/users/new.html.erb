<h2>Sign Up</h2>

<%= form_for @user do |f| %>
  <section>
    <div class="mb-3">
      <%= f.label :name, :class => 'form-label' %>
      <%= f.text_field :name, :required => true, :class => "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :email %>
      <%= f.email_field :email, :required => true, :class => 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :mobile %>
      <%= f.text_field :mobile, :class => "form-control" %>
    </div>
  </section>

  <section>
    <div class="mb-3">
      <%= f.label :password %>
      <%= f.password_field :password, :required => true, :class => "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, :required => true, :class => "form-control", :id => "confirm-password"  %>
    </div>

    <%= f.submit "Sign Up!", :class => "btn btn-dark btn-lg" %>
  </section>

<% end %>

<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
      <p>-<%= msg %></p>
    <% end %>
<% end %>
